{
  "name": "@foxify/odin",
  "version": "0.1.0-beta.8",
  "description": "Active Record Model",
  "author": "Ardalan Amini <ardalanamini22@gmail.com> [https://github.com/ardalanamini]",
  "contributors": [
    "Ardalan Amini <ardalanamini22@gmail.com> [https://github.com/ardalanamini]"
  ],
  "license": "MIT",
  "homepage": "https://github.com/foxifyjs/odin#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foxifyjs/odin.git"
  },
  "engines": {
    "node": ">=8"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run lint && npm test && node scripts/prepare.js",
    "lint": "tslint -p tsconfig.json -c tslint.json --exclude '**/*.d.ts'",
    "test": "jest --runInBand",
    "coverage": "npm test -- --coverage",
    "codecov": "npm run coverage && codecov"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "database",
    "active",
    "record",
    "typescript",
    "mongodb",
    "relation",
    "graphql",
    "schema",
    "validation"
  ],
  "dependencies": {
    "@types/mongodb": "^3.1.4",
    "app-root-path": "^2.1.0",
    "async": "^2.6.1",
    "caller-id": "^0.1.0",
    "deasync": "^0.1.13",
    "graphql": "^0.13.2",
    "mongodb": "^3.1.3",
    "mysql": "^2.16.0",
    "prototyped.js": "^0.18.1",
    "verifications": "^0.3.0"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/async": "^2.0.49",
    "@types/deasync": "^0.1.0",
    "@types/graphql": "^0.13.4",
    "@types/jest": "^23.3.1",
    "@types/mysql": "^2.15.5",
    "@types/node": "^10.7.1",
    "codecov": "^3.0.4",
    "dotenv": "^6.0.0",
    "fs-readdir-recursive": "^1.1.0",
    "jest": "^23.5.0",
    "mongodb-memory-server": "^2.0.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1",
    "uglify-es": "^3.3.9"
  },
  "jest": {
    "globalSetup": "<rootDir>/test/setup.js",
    "globalTeardown": "<rootDir>/test/teardown.js",
    "testEnvironment": "<rootDir>/test/environment.js",
    "moduleFileExtensions": [
      "ts",
      "js",
      "node"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/test/**/*\\.ts"
    ]
  }
}
