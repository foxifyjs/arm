{
  "name": "@foxify/odin",
  "version": "0.1.0-beta.2",
  "description": "Active Record Model",
  "author": "Ardalan Amini <ardalanamini22@gmail.com>",
  "contributors": [
    "Ardalan Amini <ardalanamini22@gmail.com>"
  ],
  "license": "MIT",
  "homepage": "https://github.com/foxifyjs/odin#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foxifyjs/odin.git"
  },
  "engines": {
    "node": ">=8"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run lint && node scripts/prepare.js",
    "lint": "tslint -p tsconfig.json -c tslint.json --exclude '**/*.d.ts'",
    "test": "jest",
    "coveralls": "npm test -- --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "database",
    "active",
    "record",
    "typescript",
    "mongodb",
    "relation",
    "graphql",
    "schema",
    "validation"
  ],
  "dependencies": {
    "@types/mongodb": "^3.0.18",
    "@types/node": "^10.1.1",
    "app-root-path": "^2.0.1",
    "async": "^2.6.0",
    "caller-id": "^0.1.0",
    "deasync": "^0.1.13",
    "graphql": "^0.13.2",
    "mongodb": "^3.0.8",
    "prototyped.js": "^0.6.0",
    "verifications": "^0.3.0"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/async": "^2.0.49",
    "@types/deasync": "^0.1.0",
    "@types/graphql": "^0.13.1",
    "@types/jest": "^22.2.3",
    "coveralls": "^3.0.1",
    "dotenv": "^5.0.1",
    "fs-readdir-recursive": "^1.1.0",
    "jest": "^22.4.4",
    "mongodb-memory-server": "^1.7.4",
    "rimraf": "^2.6.2",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3",
    "uglify-es": "^3.3.10"
  },
  "jest": {
    "globalSetup": "<rootDir>/test/setup.js",
    "globalTeardown": "<rootDir>/test/teardown.js",
    "testEnvironment": "<rootDir>/test/environment.js",
    "moduleFileExtensions": [
      "ts",
      "js",
      "node"
    ],
    "transform": {
      "^.+\\.ts$": "<rootDir>/scripts/preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/test/**/*\\.ts"
    ]
  }
}
